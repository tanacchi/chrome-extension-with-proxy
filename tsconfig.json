{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ESLint",
  "extends": "./packages/tsconfig/base.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmit": true,
    "target": "ESNext",
    "strict": true
  },
  "include": ["eslint.config.ts", "packages/**/*", "pages/**/*", "chrome-extension/**/*"],
  "exclude": ["**/dist/**", "**/node_modules/**", "**/*.spec.ts"]
}
