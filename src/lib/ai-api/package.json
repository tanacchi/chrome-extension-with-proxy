    "@extension/storage": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.302",
    "@types/react": "19.1.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "5.8.3",
    "vitest": "^2.1.8",
    "jsdom": "^26.0.0"
  },
  "files": [
    "lib/**/*"
