{
  "name": "@extension/ai-api",
  "version": "0.1.0",
  "description": "AI API integration package for Chrome extension",
  "private": true,
  "type": "module",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
